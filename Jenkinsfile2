pipeline {
    agent any
    stages {
        stage('Example Build') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('Example Deploy') {
            when {
                branch 'dev'
            }
            steps {
                echo 'Develop'
            }
        }
        
        stage('Example Deploy') {
            when {
                branch 'stage'
            }
            steps {
                echo 'Deploying'
            }
        }
    }
}
