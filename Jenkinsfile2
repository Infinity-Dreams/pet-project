pipeline {
  agent any
  stages {
    stage('Example Build') {
      steps {
        sh 'echo Hello World'
      }
    }
    stage('Example Deploy') {
      when {
        branch 'main'
      }
      steps {
        sh 'echo Deploying main'
      }
    }
   stage('location prod') {
      when {
        branch 'prod'
      }
      steps {
        echo 'Staying..'
        sh 'echo Stay to prod '
      }
    }
   stage('Examdple Deploy') {
      when {
        branch 'prod'
      }
      steps {
        sh 'echo deploy to prod '
      }
    }
  }
}
